---
let {currentPage} = Astro.props
let returnLink = currentPage == 'About' ? ['/','Home'] : ['/about','About'] 
---
<header class="text-base-content bg-base-300 body-font">
    <nav class="navbar text-base">
    <div class="navbar-start">
      <img class="lg:w-1/12 sm:w-1/6 w-1/3 mx-10 object-center rounded mask mask-hexagon" alt="hero" src="https://rosamint.org/images/Square_Poloroid_Self.webp">
    </div>
      <div class="navbar-center">
          <a href={returnLink[0]} class="mr-5 text-2xl font-semibold btn btn-outline">{returnLink[1]}</a>
      </div>
      <div class="navbar-end">
          <div class="btn-group animate__animated animate__fadeInRight">
             <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>            
            <input type="checkbox" checked="checked" class="toggle" data-toggle-theme="bumblebee,darkforest" data-act-class="ACTIVECLASS">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
            </svg>
          </div>
      </div>
    </nav>
</header>