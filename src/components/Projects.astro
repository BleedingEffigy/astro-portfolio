---
import FilteredProjects from "./FilteredProjects.jsx"
import BuildingProjects from "./BuildingProjects.jsx"
import projects from '../data/projects.json'

---

<section id="projects" class="text-base-content body-font bg-base-300 py-10">
  <h1 class="text-5xl font-bold text-center text-base-content font-poppins">My Projects</h1>
  <div class="container px-5 py-24 w-5/6 mx-auto">
    <div class="flex flex-col -m-4">
      <BuildingProjects projects={projects} client:visible/>
      <FilteredProjects projects={projects} client:visible/>
    </div>
  </div>
</section>
